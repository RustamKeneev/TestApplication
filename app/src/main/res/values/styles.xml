<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorWhite</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="m" tools:ignore="NewApi">@color/colorGreen</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>


    <style name="TabLayoutStyle"  parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyleForCards">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextStyleForTitle" parent="TextStyleForCards">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CardForCatalog">
        <item name="android:background">@drawable/bg_all_round</item>
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">105dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="CardForCatalogLeft" parent="CardForCatalog">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CardForCatalogRight" parent="CardForCatalog">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="CardForCatalogCentre" parent="CardForCatalog">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


    <style name="IconForCardForCatalog">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginStart">33dp</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <style name="IconForListForCatalog" parent="IconForCardForCatalog">
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextForCardCatalog">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">64dp</item>
    </style>

    <style name="TextForListCatalog" parent="TextForCardCatalog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextForListCatalogLong" parent="TextForListCatalog">
        <item name="android:layout_marginTop">0dp</item>

    </style>

    <style name="LinearLaoyutForCatalog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="TextForActivitiesTitle">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextForViewHolder">
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextForViewHolderTitle" parent="TextForViewHolder">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextForViewHolderMiddle" parent="TextForViewHolder">
        <item name="android:textColor">@color/colorGreyText</item>
        <item name="android:textSize">10sp</item>
        <!--        <item name="android:layout_marginTop">4dp</item>-->
    </style>

    <style name="TextForViewHolderBottom" parent="TextForViewHolderMiddle">
        <item name="android:textStyle">italic</item>
    </style>


    <style name="GilroyTabRemindTextBigSize">
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="GilroyTabRemindTextMediumSize">
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>