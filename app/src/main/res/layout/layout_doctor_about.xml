<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/corner_top"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/doctor_education_text"
                android:text="@string/education"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/gilroy_bold"
                android:textSize="18sp"
                android:layout_margin="@dimen/margin_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" />

            <androidx.cardview.widget.CardView
                android:id="@+id/doctor_education_card"
                android:layout_marginBottom="@dimen/margin_16"
                android:background="@color/colorGreyLight"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintTop_toBottomOf="@id/doctor_education_text"
                app:layout_constraintLeft_toLeftOf="@id/doctor_education_text"
                app:layout_constraintRight_toRightOf="@id/doctor_education_text"
                app:layout_constraintBottom_toTopOf="@id/doctor_info_card_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/doctor_education_card_text"
                    android:padding="@dimen/margin_4"
                    android:justificationMode="inter_word"
                    android:layout_margin="@dimen/margin_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UnusedAttribute" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/doctor_info_card_text"
                app:layout_constraintTop_toBottomOf="@id/doctor_education_card"
                app:layout_constraintLeft_toLeftOf="@id/doctor_education_card"
                app:layout_constraintRight_toRightOf="@id/doctor_education_card"
                app:layout_constraintBottom_toTopOf="@id/doctor_info_card"
                android:text="@string/doctor_info_text"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/gilroy_bold"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/doctor_info_card"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                app:layout_constraintTop_toBottomOf="@id/doctor_info_card_text"
                app:layout_constraintLeft_toLeftOf="@id/doctor_info_card_text"
                app:layout_constraintRight_toRightOf="@id/doctor_info_card_text"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/colorGreyLight"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/doctor_info_text"
                    android:padding="@dimen/margin_4"
                    android:justificationMode="inter_word"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/gilroy_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="@dimen/margin_4"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UnusedAttribute" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>