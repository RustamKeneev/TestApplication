<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corner_app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/professions_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/sign_in_app_text"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/sign_in_app_text"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="@string/professions_in_medicine"
            app:layout_constraintTop_toTopOf="@id/professions_toolbar"
            app:layout_constraintBottom_toBottomOf="@id/professions_toolbar"
            app:layout_constraintLeft_toRightOf="@id/professions_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints,RtlCompat" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>