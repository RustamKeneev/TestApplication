<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.PhoneActivity">


    <Spinner
        android:id="@+id/spinner_country"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_phone"
        android:layout_margin="8dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_phone"
        android:inputType="phone"
        android:digits="0123456789"
        android:hint="@string/phone_number"
        app:layout_constraintTop_toTopOf="@id/spinner_country"
        app:layout_constraintBottom_toBottomOf="@id/spinner_country"
        app:layout_constraintLeft_toRightOf="@id/spinner_country"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/phone_button"
        app:layout_constraintTop_toBottomOf="@id/spinner_country"
        app:layout_constraintLeft_toLeftOf="@id/spinner_country"
        app:layout_constraintRight_toRightOf="@id/edit_phone"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Go"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>