<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_16"
    android:layout_margin="@dimen/margin_8"
    android:layout_height="210dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/doctors_detail_image"
            android:layout_width="206dp"
            android:layout_height="210dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_profile_image"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/second_name_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/doctors_detail_image"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Фамилия"
            android:textSize="16sp"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/first_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:text="Имя"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/margin_4"
            app:layout_constraintTop_toBottomOf="@id/second_name_text"
            app:layout_constraintLeft_toLeftOf="@id/second_name_text"
            app:layout_constraintRight_toLeftOf="@id/doctors_detail_image"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/last_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:text="Отчество"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/margin_4"
            app:layout_constraintLeft_toLeftOf="@id/first_name_text"
            app:layout_constraintTop_toBottomOf="@id/first_name_text"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/doctor_status_text"
            android:text="ассистент кафедры"
            app:layout_constraintTop_toBottomOf="@id/last_name_text"
            app:layout_constraintLeft_toLeftOf="@id/last_name_text"
            android:layout_marginTop="@dimen/margin_8"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#828282"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/doctor_detail_work_location"
            android:text="Республиканский научный центр урологии"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/doctor_status_text"
            android:layout_marginBottom="@dimen/margin_16"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="#02C697"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>