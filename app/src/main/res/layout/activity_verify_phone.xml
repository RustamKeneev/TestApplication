<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.VerifyPhoneActivity">

    <EditText
        android:id="@+id/verify_enter_code_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Enter code"
        android:layout_width="0dp"
        android:layout_margin="40dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_sign_in"
        app:layout_constraintTop_toBottomOf="@id/verify_enter_code_edit"
        app:layout_constraintLeft_toLeftOf="@id/verify_enter_code_edit"
        app:layout_constraintRight_toRightOf="@id/verify_enter_code_edit"
        android:layout_marginTop="16dp"
        android:text="Sign In"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/verify_progress"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/verify_enter_code_edit"
        app:layout_constraintLeft_toLeftOf="@id/verify_enter_code_edit"
        app:layout_constraintRight_toRightOf="@id/verify_enter_code_edit"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>